@model BugFixer.Domain.ViewModels.Admin.Tag.EditTagAdminViewModel

<div class="row">
    <div class="col-md-12">
        <form id="edit-tag-form" asp-action="EditTag" asp-controller="Home" asp-area="Admin" data-ajax="true" data-ajax-method="Post"
              data-ajax-begin="StartLoading('#MediumModalBody')" data-ajax-complete="EndLoading('#MediumModalBody')" data-ajax-success="EditTagDone">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input type="text" class="form-control" asp-for="Title">
                <span asp-validation-for="Title" class="admin-error-style"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Description" class="admin-error-style"></span>
            </div>
            <button type="submit" class="btn btn-yellow btn-block">ویرایش تگ</button>
        </form>
    </div>
</div>

